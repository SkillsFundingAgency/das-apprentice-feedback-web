@page "/exit/start"
@model SFA.DAS.ApprenticeFeedback.Web.Pages.ExitInterview.StartModel
@{
    ViewData["Title"] = "Exit survey";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">Exit survey</h1>

        <p class="govuk-body"> Use this service if you have withdrawn from your apprenticeship programme.</p>

        <p class="govuk-body"> This short exit survey will give us valuable information that will support future apprentices in their programmes.</p>

        <h2 class="govuk-heading-m"> Before you start </h2>

        <p class="govuk-body"> For each question, please select the most appropriate answer for you.</p>

        <p class="govuk-body"> Thank you for agreeing to participate in this exit survey.</p>
                
        <form method="get">
            <button type="submit" asp-page="./Question1" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start" data-module="govuk-button">
                Start now
            </button>
        </form>
            
    </div>
</div>
