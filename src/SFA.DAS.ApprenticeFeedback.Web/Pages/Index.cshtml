@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="govuk-width-container">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l"> Feedback on your training provider </h1>

            @if (Model.IsLessThanThreeMonthsSinceStartDate || Model.IsMoreThanThreeMonthsSincePassing || Model.IsMoreThanThreeMonthsSinceWithdrawal)
            {
                <div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">

                    <div class="govuk-notification-banner__header">
                        <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                            Important
                        </h2>
                    </div>

                    <div class="govuk-notification-banner__content">
                        @if (Model.IsLessThanThreeMonthsSinceStartDate)
                        {
                            <p class="govuk-notification-banner__heading">
                                We are unable to accept feedback on your training provider until 3 months after your planned training start date.
                            </p>

                            <p> You can start giving feedback on or after @Model.FeedbackStartDate. </p>
                        }
                        else if (Model.IsMoreThanThreeMonthsSincePassing)
                        {
                            <p class="govuk-notification-banner__heading">
                                It is over 3 months since you completed your apprenticeship and we are unable to accept feedback after this time.
                            </p>
                        }
                        else if (Model.IsMoreThanThreeMonthsSinceWithdrawal)
                        {
                            <p class="govuk-notification-banner__heading">
                                It is over 3 months since you withdrew from your apprenticeship and we are unable to accept feedback after this time.
                            </p>
                        }

                    </div>
                </div>
            }
            else if (Model.HasRecentlyCompleted || Model.HasGivenFinalFeedback)
            {

            }

            <a class="govuk-button" href="@Model.DashboardLink"> Return to dashboard </a>
        </div>
    </div>
</div>