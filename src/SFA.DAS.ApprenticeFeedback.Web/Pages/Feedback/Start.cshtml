@page "/start/{ukprn:int}"
@model SFA.DAS.ApprenticeFeedback.Web.Pages.Feedback.StartModel
@{
    ViewData["Title"] = "Give feedback on " + Model.ProviderName;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">Give feedback on @Model.ProviderName </h1>

        <p class="govuk-body"> Give your feedback to help your training provider improve. Your feedback will also help employers choose the best training for them.</p>

        <p class="govuk-body"> You'll rate different parts of your training. All questions are multiple choice.</p>

        <h2 class="govuk-heading-m"> How we protect your identity </h2>

        <p class="govuk-body"> We do not share your name.</p>

        <p class="govuk-body"> We do not show your feedback by itself. We wait until more apprentices give their ratings, then share the total ratings from everyone.</p>

        <h2 class="govuk-heading-m"> Before you start </h2>

        <p class="govuk-body"> By continuing, you agree we can use your feedback to calculate a rating for your provider. We'll share this rating with your provider and on <a class="govuk-link" href="@Model.FindApprenticeshipUrl" target="_blank"> Find apprenticeship training (opens in a new tab)</a>.</p>

        <form method="get">
            <button type="submit" asp-page="./FeedbackAttributes" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start" data-module="govuk-button">
                Start now
            </button>
        </form>
            
    </div>
</div>
