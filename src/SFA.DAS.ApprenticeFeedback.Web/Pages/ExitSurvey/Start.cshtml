@page "/exit/start"
@model SFA.DAS.ApprenticeFeedback.Web.Pages.ExitSurvey.StartModel
@{
    ViewData["Title"] = "Exit survey";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">Exit survey</h1>

        <p class="govuk-body">Use this service if you did not complete your apprenticeship.</p>

        <p class="govuk-body">This short exit survey will give us valuable information that will support future apprentices.</p>

        <p class="govuk-body">For each question please select one answer.</p>

        <p class="govuk-body">Thank you for agreeing to participate in this exit survey.</p>
                
        <form method="get">
            <button type="submit" asp-page="./Question1" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start" data-module="govuk-button">
                Start now
            </button>
        </form>
            
    </div>
</div>
