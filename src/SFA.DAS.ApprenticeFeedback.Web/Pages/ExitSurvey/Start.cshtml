@page "/exit/start/{apprenticeFeedbackTargetId}"
@model SFA.DAS.ApprenticeFeedback.Web.Pages.ExitSurvey.StartModel
@{
    ViewData["Title"] = "Exit survey";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">Exit survey</h1>

        <p class="govuk-body">Use this service if you did not complete your apprenticeship, including your end-point assessment.</p>

        <p class="govuk-body">This short exit survey will give us valuable information on why you did not complete your apprenticeship and will help us to improve the service for future apprentices.</p>

        <a asp-page="./Question1" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start" data-module="govuk-button">
            Start now
        </a>
        
            
    </div>
</div>
