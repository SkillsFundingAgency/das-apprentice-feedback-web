@page "/exit/question2"
@model SFA.DAS.ApprenticeFeedback.Web.Pages.ExitSurvey.Question2Model
@{
    ViewData["Title"] = "Exit survey";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="ValidationSummary" />
        <form method="post">
            <div class="govuk-form-group" validation-row-status property-name="IncompletionReason">
                <fieldset class="govuk-fieldset">

                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-heading-l">
                            I did not complete my apprenticeship because...
                        </h1>
                    </legend>

                    <div id="options-hint" class="govuk-hint">
                        Please select one answer that is relevant to you.
                    </div>

                    <span asp-validation-for="IncompletionReason" class="govuk-error-message"></span>

                    <div class="govuk-radios" data-module="govuk-radios">

                        @for (int i = 0; i < Model.Reasons.Count; i++)
                        {
                            if (i == Model.Reasons.Count - 1)
                            {
                                <div class="govuk-radios__divider">or</div>
                            }

                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" type="radio" asp-for="IncompletionReason" value="@Model.Reasons[i]" />
                                <label class="govuk-label govuk-radios__label" for="IncompletionReason@Model.Reasons[i]">
                                    @Model.Reasons[i]
                                </label>
                            </div>
                        }
                    </div>

                </fieldset>
            </div>
            <button class="govuk-button" type="submit"> Continue </button>
        </form>

    </div>
</div>
