@page "/exit/question4"
@model SFA.DAS.ApprenticeFeedback.Web.Pages.ExitSurvey.Question4Model
@{
    ViewData["Title"] = "Exit survey";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post">
            <div class="govuk-form-group" validation-row-status property-name="RemainedReason">
                <fieldset class="govuk-fieldset">

                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-heading-l">
                            I would have remained on the apprenticeship if...
                        </h1>
                    </legend>

                    <div id="options-hint" class="govuk-hint">
                        Please select one answer that is most relevant to you.
                    </div>

                    <span asp-validation-for="RemainedReason" class="govuk-error-message"></span>
                    <div class="govuk-radios" data-module="govuk-radios">

                        @foreach (var reason in Model.Reasons)
                        {
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" type="radio" asp-for="RemainedReason" value="@reason" />
                                <label class="govuk-label govuk-radios__label" for="RemainedReason@(reason)">
                                    @reason
                                </label>
                            </div>
                        }
                        <div class="govuk-radios__divider">or</div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" type="radio" asp-for="RemainedReason" value="I did not want to remain" />
                            <label class="govuk-label govuk-radios__label" for="RemainedReasonI did not want to remain">
                                I did not want to remain
                            </label>
                        </div>


                    </div>

                </fieldset>
            </div>
            <button class="govuk-button" type="submit"> Continue </button>
        </form>

    </div>
</div>
