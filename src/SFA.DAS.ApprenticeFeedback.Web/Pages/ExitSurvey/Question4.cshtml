@page "/exit/question4"
@model SFA.DAS.ApprenticeFeedback.Web.Pages.ExitSurvey.Question4Model
@{
    ViewData["Title"] = "Exit survey";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="ValidationSummary" />
        <form method="post">
            <div class="govuk-form-group" validation-row-status property-name="SelectedAttributeId">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-heading-l">
                            What did you do after leaving your apprenticeship?
                        </h1>
                    </legend>
                    <div id="options-hint" class="govuk-hint">
                        Select one answer that is most relevant to you
                    </div>

                    <span asp-validation-for="SelectedAttributeId" class="govuk-error-message"></span>

                    <div class="govuk-radios" data-module="govuk-radios">

                        @for (var i = 0; i < Model.Attributes.Count(); i++)
                        {
                            <input type="hidden" asp-for="Attributes[i].Id" />
                            <input type="hidden" asp-for="Attributes[i].Name" />
                            <input type="hidden" asp-for="Attributes[i].Category" />
                            <input type="hidden" asp-for="Attributes[i].Ordering" />

                            @if (i == Model.Attributes.Count() - 1)
                            {
                                <div class="govuk-checkboxes__divider">or</div>
                            }

                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="@($"attribute-{i}")" asp-for="SelectedAttributeId" type="radio" value="@Model.Attributes[i].Id">
                                <label class="govuk-label govuk-radios__label" for="@($"attribute-{i}")">
                                    @Model.Attributes[i].Name
                                </label>
                            </div>
                        }

                    </div>
                </fieldset>
            </div>
            <button class="govuk-button" type="submit"> Continue </button>
        </form>
    </div>
</div>
